<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose Category"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#050505" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@android:color/white"
        android:elevation="0dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/editTextTitle_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@android:color/white"
            android:hint="Name your task"
            android:inputType="text"
            android:textColorHint="#757575" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/purple_200" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Choose Category"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#0B0B0B" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/white"
        android:elevation="0dp"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/editTextDescription_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@android:color/white"
            android:hint="Description"
            android:inputType="text"
            android:textColorHint="#757575" />

        <View
            android:id="@+id/type_id"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/purple_200" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/date_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button"
        app:icon="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Choose Category"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#050505" />

    <Button
        android:id="@+id/creation_date_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="Button"
        app:icon="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/work_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:text="Work_id" />

    <TextView
        android:id="@+id/personal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:text="Personal" />

    <TextView
        android:id="@+id/health_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:text="Health" />

    <TextView
        android:id="@+id/social_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:text="Social" />

    <Button
        android:id="@+id/addTaskBtn_id"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:background="@color/purple_200"
        android:text="Save Task" />

    <Button
        android:id="@+id/updateBtn_id"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Update"
        android:visibility="invisible" />


</LinearLayout>